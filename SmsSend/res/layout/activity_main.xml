<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.messageSender.MainActivity" >

    <TextView
        android:id="@+id/phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="请输入手机号" />
    <EditText 
        android:id="@+id/et_phoneNum"
        android:layout_below="@id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phoneNum"
        android:text="请输入短信内容"
        />
    <EditText 
        android:id="@+id/messageContent"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:gravity="top"
        android:layout_below="@id/message"
        />
    
    <Button 
        android:id="@+id/sendButtons"
		android:layout_width="wrap_content"    
		android:layout_height="wrap_content"
		android:layout_below="@id/messageContent"
		android:text="发送"
        />

</RelativeLayout>
